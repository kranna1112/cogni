$("ul.errors").html("")
$("h4#error_explanation").html("")
<% if @policy.errors.any? %>
  $("ul.errors").show()
  $("h4#error_explanation").show()
  $("h4#error_explanation").html("<%= pluralize(@policy.errors.count, 'Error') %> Occurred")
  <% @policy.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $(".policy-index").html("<%= escape_javascript(render 'index') %>")
  $("#policy-modal").modal("hide")
<% end %>