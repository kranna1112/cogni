$("ul.errors").html("")
$("h4#error_explanation").html("")
<% if @user.errors.any? %>
  $("ul.errors").show()
  $("h4#error_explanation").show()
  $("h4#error_explanation").html("<%= pluralize(@user.errors.count, 'Error') %> Occurred")
  <% @user.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $(".user-index").html("<%= escape_javascript(render 'index') %>")
  $("#user-modal").modal("hide")
<% end %>